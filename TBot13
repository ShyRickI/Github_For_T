@bot.message_handler(commands = ['go'])
def send_pool(message):
    new = '–ö–∞–∫ –ø–æ–≥–æ–¥–∞?'
    com = message.text.split()
    del com[com.index('/go')]
    com.append(new)
    answers = ['–ö–ª–∞—Å—Å–Ω–∞—è!','–ù—É —Ç–∞–∫ —Å–µ–±–µ','–ë—ã–≤–∞–ª–æ –ª—É—á—à–µ...']
    bot.send_poll(message.chat.id, new, answers)
    print(com)


@bot.message_handler(commands=['start'])
def start(message):
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    btn1 = types.KeyboardButton("üê± –ö–æ—Ç")
    btn2 = types.KeyboardButton("üêï –°–æ–±–∞–∫–∞")
    btn3 = types.KeyboardButton("üé≤ –†–∞–Ω–¥–æ–º–∞–π–∑–µ—Ä")
    btn4 = types.KeyboardButton("¬© –ü–∞—Å—Ç–∞")
    btn5 = types.KeyboardButton("‚ùì –û–ø—Ä–æ—Å")

    markup.add(btn1, btn2, btn3, btn4, btn5)

    bot.send_message(message.chat.id, text="–ü—Ä–∏–≤–µ—Ç, {0.first_name}! –Ø –±–æ—Ç –¥–ª—è –ø–æ–¥–Ω—è—Ç–∏—è –Ω–∞—Å—Ç—Ä–æ–µ–Ω–∏—è".format(message.from_user), reply_markup=markup)


@bot.message_handler(content_types=['text'])
def func(message):
    if(message.text == "üê± –ö–æ—Ç"):

        response = requests.get(url)
        data = response.json()
        cat = data[0]['url']

        bot.send_photo(message.chat.id, cat)

    elif(message.text == "üêï –°–æ–±–∞–∫–∞"):
        #response2 = requests.get(url2)
        #data2 = response2.json()
        #dog = data2[0]['url']
        #bot.send_photo(message.chat.id, dog)

        url3 = get_url()
        bot.send_photo(message.chat.id,photo=url3)

    elif(message.text == "¬© –ü–∞—Å—Ç–∞"):
        bot.send_message(message.chat.id, random_message())

    elif(message.text == "‚ùì –û–ø—Ä–æ—Å"):
        new = '–ö–∞–∫ –ø–æ–≥–æ–¥–∞?'
        com = message.text.split()
        del com[com.index('–û–ø—Ä–æ—Å')]
        com.append(new)
        answers = ['–ö–ª–∞—Å—Å–Ω–∞—è!','–ù—É —Ç–∞–∫ —Å–µ–±–µ','–ë—ã–≤–∞–ª–æ –ª—É—á—à–µ...']
        bot.send_poll(message.chat.id, new, answers)


    elif(message.text == "üé≤ –†–∞–Ω–¥–æ–º–∞–π–∑–µ—Ä"):

        bot.send_message(message.chat.id, '–í–≤–µ–¥–∏—Ç–µ –∞—Ä–≥—É–º–µ–Ω—Ç—ã:')
        bot.register_next_step_handler(message, car_name)

def car_name(message):

            command = message.text.split(" ")
            command_len = len(command)
            try:
                if command_len == 1:
                    bot.reply_to(message, random.randint(1,100))
                elif command_len == 2:
                    bot.reply_to(message, random.randint(1, int(command[1])))
                elif command_len == 3:
                    bot.reply_to(message, random.randint(int(command[1]), int(command[2])))
                else:
                    bot.reply_to(message, "–ú–∞–∫—Å–∏–º–∞–ª—å–Ω–∞ –∫—ñ–ª—å–∫—ñ—Å—Ç—å –ø–∞—Ä–∞–º–µ—Ç—Ä—ñ–≤ - 2.")
            except Exception:
                bot.reply_to(message, "–©–æ—Å—å –ø—ñ—à–ª–æ –Ω–µ —Ç–∞–∫, —Å–ø—Ä–æ–±—É–π—Ç–µ –∑–Ω–æ–≤—É.")






bot.polling(none_stop=True)

